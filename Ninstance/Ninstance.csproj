<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <Authors>Joep Geevers</Authors>
    <Company>Joep Geevers</Company>
    <PackageTags>test class instance factory unit-testing tdd</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Heras/Ninstance</PackageProjectUrl>
    <Version>1.1.0</Version>
    <Description>Ninstance creates test instances for your classes without you having to care about the constructor signature, so you can change dependencies without having to fix hundreds of tests, or passing substitutes that don't affect behaviour</Description>
    <RepositoryUrl>https://github.com/Heras/Ninstance</RepositoryUrl>
    <PackageReleaseNotes>Added overload to specify constructor to use</PackageReleaseNotes>
    <FileVersion>1.1.0.0</FileVersion>
    <AssemblyVersion>1.1.0.0</AssemblyVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIcon>ninstance-nuget-icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NSubstitute" Version="4.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="ninstance-nuget-icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
